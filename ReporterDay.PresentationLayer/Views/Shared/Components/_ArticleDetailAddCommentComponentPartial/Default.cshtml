

<section id="comment-form" class="comment-form section">
    <div class="container">

        <form id="commentForm" >

            <h4>Yorum Yapma Paneli</h4>            
            
            
            <div class="row">
                <div class="col form-group">
                    <input type="hidden" name="EncryptedArticleId" value="@ViewBag.EncryptedId" />



                    <textarea name="CommentDetail" id="commentTextArea" class="form-control" placeholder="Yorumunuzu buraya yazabilirsiniz..."></textarea>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Yorumu Gönder</button>
            </div>

        </form>

    </div>
</section>



